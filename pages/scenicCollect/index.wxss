/* pages/scenic/index.wxss */
.container1{
  background-color: #ECEDF2;
  padding-top: 40rpx;
  min-height: calc(100vh - 40rpx);
}
.item{
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-radius: 8rpx;
  background-color: #fff;

}
.img-box{

  height: 388rpx;
  position: relative;
}
.item .item-img{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.item .item-name{
  color: #fff;
  font-size: 18px;
  position: absolute;
  background-color: rgba(00, 00, 00, 0.4);
  bottom: 0;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  text-align: center;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius:8rpx;
}
.item .item-rating{
  padding: 22rpx 0 10rpx 20rpx;
  color: #333333;
  font-size: 14px;
}
.item .item-describe{
  padding:0 20rpx;
  color: #666666;
  font-size: 14px;
}
