/* pages/areaDetail/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.backImg{
  width: 100%;
  height: 100%;
}
.float-box{
  width: 100%;
  height: 100%;
  background-color:rgba(3, 5, 37, 0.37);
  position: absolute;
  top: 0;
  overflow-y:scroll; 
}
.video{
  width: 100%;
  height: 480rpx;
}
.content{
  padding: 0 30rpx;

  padding-top: 20rpx;
  padding-bottom: 48rpx;
}
.content .bright-spot{
  background-color: rgba(255, 255, 255, 0.12);
  font-size: 12px;
  border-radius: 3rpx;
  text-align: center;
  padding: 30rpx 0;
  color: #fff;
}
.content .introduce{
  padding-top: 30rpx;
  padding-bottom: 24rpx;
  color: #fff;
}
.introduce .brief{
  line-height: 56rpx;
}
.introduce .detail-introduce{
  font-size: 16px;
  float: right;
}
.content .map-img-box{
  width: 100%;
  height: 220rpx;
  padding-bottom: 40rpx;
}
.content .map-img-box image{
  width: 100%;
  height: 100%;
}
.content .best-time-box{
  background-color: rgba(255, 255, 255, 0.12);
  border-radius: 3rpx;
  padding: 24rpx;
  color: #fff;
}
.content .title{
  font-size: 17px;
  padding-bottom: 22rpx;
}
.best-time-box .time-content{
  display: flex;
  align-items: center;
}

.best-time-box .img{
  width: 40rpx;
  height: 40rpx;
  padding-right: 30rpx;
}
.best-time-box .time{
  font-size: 14px;
  height: 40rpx;
  line-height: 40rpx;
}
.content .holiday{
  background-color: rgba(255, 255, 255, 0.12);
  border-radius: 3rpx;
  padding: 24rpx;
  color: #fff;
  margin-top: 40rpx;
}
.holiday .holiday-item{
  border-bottom:1px solid rgba(255, 255, 255, 0.2);
  padding: 20rpx 0;
}
.holiday .name-time{
  position: relative;
}
.holiday .holiday-name{
  font-size: 16px;
}
.holiday .holiday-time{
  font-size: 12px;
  position: absolute;
  right: 0;
}
.holiday .holiday-describe{
  font-size: 14px;
  padding-top: 10rpx;
}
.weather-local{
  background-color: rgba(255, 255, 255, 0.12);
  border-radius: 3rpx;
  padding: 24rpx;
  color: #fff;
  margin-top: 40rpx;
  

}
.weather-local .weather-box{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.weather-local .weather-item{
  width: 40%;
  text-align: center;
  padding: 20rpx;
}
.weather-item .time{
  padding-bottom: 10rpx;
}
.weather-local .spring{
  border-bottom: 2px solid rgba(255, 255, 255, 0.2);
  border-right: 2px solid rgba(255, 255, 255, 0.2);
}
.weather-local .summer{
  border-bottom: 2px solid rgba(255, 255, 255, 0.2);
}
.weather-local .winter{
  border-left: 2px solid rgba(255, 255, 255, 0.2);
}