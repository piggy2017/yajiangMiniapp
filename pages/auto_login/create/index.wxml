<view class="container">
  <view class="form">
    <input placeholder="{{language.qsrdlm}}" bindblur="bindBlur" data-field="loginName" placeholder-class="placeholder"></input>
    <input placeholder="{{language.qsrnc}}" bindblur="bindBlur" data-field="nickname" placeholder-class="placeholder"></input>
    <input placeholder="{{language.qszmm}}" bindblur="bindBlur" data-field="password"   password="true" placeholder-class="placeholder"></input>
    <input placeholder="{{language.qqrmm}}" bindblur="bindBlur" data-field="confirmPassword"   password="true" placeholder-class="placeholder"></input>
  </view>
  <view class="btn-box">
    <view class="login-btn" bindtap="handleLogin">{{language.ljzc}}</view>
  </view>
  <view class="register-box">
    <text>{{language.yyzh}}</text>
    <text class="register" bindtap="gotoPage">{{language.ljdl}}</text>
  </view>
  <view hidden="{{!verify}}" class="dialog">
    {{message}}
  </view>
</view>