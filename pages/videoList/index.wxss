.container {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.video-box {
  position: relative;
  padding-bottom: 20rpx;
}

.video {
  width: 100%;
  height: 480rpx;
}

.title {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  color: #fff;
}

.controls {
  position: relative;
}

.play-box {
  width: 160rpx;
  position: absolute;
  top: calc(50% - 80rpx);
  left: calc(50% - 80rpx);
  height: 160rpx;
}
