.container{
  background-color: #ECEDF2;
  height:100vh;
  font-size: 17px;
}
.info{
  background-color: #fff;
}
.info .item{
  border-bottom: 1px solid #ECEDF2;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  font-size: 14px;
}
.info .item .name{
  width: 140rpx;
  color: #888888;
}
.info .item .value{
  width: calc(100% - 160rpx);
}
.info .item .update{
  width: calc(100% - 40rpx);
  text-align: right;
  padding-right: 20rpx;
  color: #5D7AFF;
}
.info .item .down-img{
  width: 14rpx;
  height: 24rpx;
}
.btn-box{
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  position: fixed;
  bottom: 100rpx;
}
.btn-box .output-btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: #5D7AFF;
  border-radius: 8rpx;
}