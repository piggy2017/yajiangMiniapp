.content{
  background-color: #ECEDF2;
}
.container1{
  background-color: #fff;
}

.hotel-name{
  color: #222222;
  font-size: 30px;
  padding: 40rpx 0;
  border-bottom: 1px solid #ECEDF2;
}
.address-box,.phone-box{
  color: #333333;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ECEDF2;
}
.address-box .img,.phone-box .img{
  width: 40rpx;
  height: 40rpx;
  padding-right: 30rpx;
}
.address-box .address,.phone-box .phone{
  width: calc(100% - 100rpx)
}
.address-box .down-img,.phone-box .down-img{
  width: 14rpx;
  height: 24rpx;
}
.room-box{
  margin-top: 10rpx;
  background-color: #fff;
  padding: 0 30rpx;
}
.room-box .room{
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1px solid #ECEDF2;
}
.room-box .room .room-img{
  width: 300rpx;
  height: 180rpx;
  padding-right: 30rpx;
  border-radius: 4px;

}
.room-box .room .room-content{
  width: calc(100% - 330rpx);
  height: 180rpx;
  display: flex;
align-items: center;
flex-flow: wrap;

}
.room-box .room .room-name{
  color: #222222;
  font-size: 17px;
  font-weight: 600;
}
.room-box .room .room-brief{
  color: #333333;
  font-size: 14px;
  padding-top: 11rpx;
}

.scenic{
  background-color: #fff;
  margin-top: 10rpx;
  padding-bottom: 40rpx;
}

.type-tip {
  width: calc(100% - 60rpx);
  position: relative;
  top: 0rpx;
  left: 30rpx;
  color: #222;
  padding-bottom: 50rpx;
  padding-top: 20rpx;
}

.type-tip .title {
  font-weight: bold;
  font-size: 24px;
}

.type-tip .more {
  font-size: 14px;
  position: absolute;
  right: 0px;
  bottom: 50rpx;
}
.type-content {
  padding-left: 30rpx;
  display: flex;
  overflow-x: auto;
  justify-content: space-between;
}

.type-content .item {
  padding-right: 20rpx;
  width: 560rpx;
  flex-basis: 560rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.type-content .item .item-img {
  width: 100%;
  height: 320rpx;
  border-radius: 4px;
}

.type-content .item .item-title {
  color: #222;
  font-weight: bold;
  font-size: 17px;
  padding: 20rpx 0;
}

.type-content .item .item-rating {
  font-size: 14px;
  color: #333;
  padding-bottom: 20rpx;
}

.type-content .item .item-describe {
  
  color: #666;
  font-size: 14px;
}